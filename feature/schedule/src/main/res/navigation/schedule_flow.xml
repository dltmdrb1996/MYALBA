<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/schedule_flow"
    app:startDestination="@id/scheduleFragment">

    <fragment
        android:id="@+id/scheduleFragment"
        android:label="schedule"
        android:name="com.bottotop.schedule.ScheduleFragment"
        tools:layout="@layout/fragment_schedule">

        <deepLink
            android:id="@+id/deepLink"
            app:uri="example://schedule/exampleArgs?msg={msg}" />

        <action
            android:id="@+id/action_scheduleFragment_to_scheduleDetailFragment"
            app:destination="@id/scheduleDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/scheduleDetailFragment"
        android:label="scheduleDetail"
        android:name="com.bottotop.schedule.ScheduleDetailFragment"
        tools:layout="@layout/fragment_schedule_detail">

        <deepLink
            android:id="@+id/deepLink2"
            app:uri="example://scheduleDetail/exampleArgs?msg={msg}" />

    </fragment>

</navigation>